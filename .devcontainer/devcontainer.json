{
  "name": "my-homepage",
  "dockerComposeFile": "./compose.yaml",
  "service": "astro-web",
  "workspaceFolder": "/service",
  "shutdownAction": "none",
	"postCreateCommand": "npm --prefix ./web install ./web",
  "postStartCommand": "git config --global --add safe.directory /service && git config --global core.editor vim",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-ceintl.vscode-language-pack-ja",
        "astro-build.astro-vscode",
        "bradlc.vscode-tailwindcss",
        "emranweb.daisyui-snippet",
        "mhutchie.git-graph",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
} 